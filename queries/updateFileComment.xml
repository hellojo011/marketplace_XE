<query id="updateFileComment" action="update">
    <tables>
        <table name="files" />
    </tables>
    <columns>
        <column name="comment" var="comment" notnull="notnull" minlength="1" maxlength="250" />
    </columns>
    <conditions>
        <condition operation="equal" column="file_srl" var="file_srl" filter="number" notnull="notnull" />
    </conditions>
</query>
